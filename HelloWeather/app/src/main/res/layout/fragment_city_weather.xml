<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/frag_sv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CityWeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/frag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/frag_tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="北京市 朝阳区"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/snow"/>

            <RelativeLayout
                android:id="@+id/frag_current_lay"
                android:layout_below="@+id/frag_tv_city"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/frag_tv_currentTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="4"
                    android:textSize="120dp"
                    android:textColor="#FFFAFA"/>
                <TextView
                    android:id="@+id/frag_tv_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/frag_tv_currentTemp"
                    android:layout_marginTop="30dp"
                    android:text="℃"
                    android:textSize="25dp"
                    android:textColor="#FFFAFA"/>
                <TextView
                    android:id="@+id/frag_tv_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晴"
                    android:textSize="20dp"
                    android:textColor="@color/snow"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/frag_tv_currentTemp"/>

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp">
            <RelativeLayout
                android:id="@+id/frag_layout_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/frag_iv_today_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/i103"/>
                <TextView
                    android:id="@+id/frag_tv_today_text"
                    style="@style/threeDayText"
                    android:layout_toRightOf="@+id/frag_iv_today_icon"
                    android:text="今天 · 多云转晴"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/frag_tv_today_min"
                    style="@style/threeDayText"
                    android:text="-4℃"
                    android:layout_toLeftOf="@+id/frag_tv_xiexian1"/>
                <TextView
                    android:id="@+id/frag_tv_xiexian1"
                    style="@style/threeDayText"
                    android:text="/"
                    android:layout_toLeftOf="@+id/frag_tv_today_max"/>
                <TextView
                    android:id="@+id/frag_tv_today_max"
                    style="@style/threeDayText"
                    android:text="4℃"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/frag_layout_tomorrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/frag_iv_tomorrow_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/i100"/>
                <TextView
                    android:id="@+id/frag_tv_tomorrow_text"
                    style="@style/threeDayText"
                    android:layout_toRightOf="@+id/frag_iv_tomorrow_icon"
                    android:text="明天 · 晴转多云"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/frag_tv_tomorrow_min"
                    style="@style/threeDayText"
                    android:text="-4℃"
                    android:layout_toLeftOf="@+id/frag_tv_xiexian2"/>
                <TextView
                    android:id="@+id/frag_tv_xiexian2"
                    style="@style/threeDayText"
                    android:text="/"
                    android:layout_toLeftOf="@+id/frag_tv_tomorrow_max"/>
                <TextView
                    android:id="@+id/frag_tv_tomorrow_max"
                    style="@style/threeDayText"
                    android:text="4℃"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/frag_layout_nextTomorrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/frag_iv_nextTomorrow_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/i101"/>
                <TextView
                    android:id="@+id/frag_tv_nextTomorrow_text"
                    style="@style/threeDayText"
                    android:layout_toRightOf="@+id/frag_iv_nextTomorrow_icon"
                    android:text="后天 · 多云"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/frag_tv_nextTomorrow_min"
                    style="@style/threeDayText"
                    android:text="-4℃"
                    android:layout_toLeftOf="@+id/frag_tv_xiexian3"/>
                <TextView
                    android:id="@+id/frag_tv_xiexian3"
                    style="@style/threeDayText"
                    android:text="/"
                    android:layout_toLeftOf="@+id/frag_tv_nextTomorrow_max"/>
                <TextView
                    android:id="@+id/frag_tv_nextTomorrow_max"
                    style="@style/threeDayText"
                    android:text="4℃"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frag_layout_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:background="@drawable/frag_littlebg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/frag_index_dress"
                    style="@style/indexText"
                    android:text="适宜棉衣"
                    android:drawableBottom="@mipmap/colddress"/>
                <TextView
                    android:id="@+id/frag_index_sun"
                    style="@style/indexText"
                    android:text="需要防晒"
                    android:drawableBottom="@mipmap/sunscreen"/>
                <TextView
                    android:id="@+id/frag_index_cold"
                    style="@style/indexText"
                    android:text="容易感冒"
                    android:drawableBottom="@mipmap/medicine"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/frag_index_umbrella"
                    style="@style/indexText"
                    android:text="不用带伞"
                    android:drawableBottom="@mipmap/umbrella"/>
                <TextView
                    android:id="@+id/frag_index_washCar"
                    style="@style/indexText"
                    android:text="适宜洗车"
                    android:drawableBottom="@mipmap/car"/>
                <TextView
                    android:id="@+id/frag_index_exercise"
                    style="@style/indexText"
                    android:text="适宜运动"
                    android:drawableBottom="@mipmap/exercise"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>